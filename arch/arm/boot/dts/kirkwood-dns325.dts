/dts-v1/;

/include/ "kirkwood.dtsi"

/ {
	model = "D-Link DNS-325 NAS (Rev A1)";
	compatible = "dlink,dns-325-a1", "dlink,dns-325", "dlink,dns-kirkwood", "mrvl,kirkwood-88f6281", "mrvl,kirkwood";

	memory {
		device_type = "memory";
		reg = <0x00000000 0x10000000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200n8 earlyprintk";
	};

	gpio-poweroff {
		compatible = "gpio-poweroff";
		gpios = <&gpio_high 4 0>; /* GPIO 36 Active High */
	};

	gpio-keys {
		compatible = "gpio-keys";
		power {
			label = "Power button";
			gpios = <&gpio_high 2 1>; /* GPIO 34 Active Low */
			linux,code = <116>; /* KEY_POWER */
			gpio-key,wakeup;
		};
		usb-unmount {
			label = "USB unmount button";
			gpios = <&gpio_high 15 1>; /* GPIO 47 Active Low */
			linux,code = <161>; /* KEY_EJECTCD */
			gpio-key,wakeup;
		};
		reset {
			label = "Reset button";
			gpios = <&gpio_high 16 1>; /* GPIO 48 Active Low */
			linux,code = <408>; /* KEY_RESTART */
			gpio-key,wakeup;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";
		white-power {
			label = "dns325:white:power";
			gpios = <&gpio_low 26 1>; /* GPIO 26 Active Low */
			linux,default-trigger = "default-on";
		};
		white-usb {
			label = "dns325:white:usb";
			gpios = <&gpio_high 11 1>; /* GPIO 43 Active Low */
		};
		red-l_hdd {
			label = "dns325:red:l_hdd";
			gpios = <&gpio_low 28 1>; /* GPIO 28 Active Low */
		};
		red-r_hdd {
			label = "dns325:red:r_hdd";
			gpios = <&gpio_low 27 1>; /* GPIO 27 Active Low */
		};
		red-usb {
			label = "dns325:red:usb";
			gpios = <&gpio_low 29 1>; /* GPIO 29 Active Low */
		};
	};

	ocp@f1000000 {
		serial@12000 {
			clock-frequency = <200000000>;
			status = "okay";
		};

		nand@3000000 {
			status = "okay";

			partition@0 {
				label = "u-boot";
				reg = <0x0000000 0x100000>;
				read-only;
			};

			partition@100000 {
				label = "uImage";
				reg = <0x0100000 0x500000>;
			};

			partition@600000 {
				label = "ramdisk";
				reg = <0x0600000 0x500000>;
			};

			partition@b00000 {
				label = "image";
				reg = <0x0b00000 0x6600000>;
			};

			partition@7100000 {
				label = "mini firmware";
				reg = <0x7100000 0xa00000>;
			};

			partition@7b00000 {
				label = "config";
				reg = <0x7b00000 0x500000>;
			};
		};
	};
};
